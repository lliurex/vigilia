Public Sub reemplazarRuta(nombre As String)
  
  Dim contenido As String
  
  contenido = File.Load(nombre)
  contenido = Replace$(contenido, "[target_dir]", "target_dir " & User.home & "/.Vigilia/capturas")
  File.Save(nombre, contenido)
  
End
